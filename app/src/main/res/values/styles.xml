<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#1565C0</item>
        <item name="fab_colorPressed">#2272CD</item>
        <item name="fab_colorRipple">#62B2FF</item>
    </style>

    <style name="MenuButtonsSmall.Red">
        <item name="fab_colorNormal">@color/md_red_500</item>
        <item name="fab_colorPressed">@color/md_red_700</item>
        <item name="fab_colorRipple">@color/md_red_900</item>
    </style>

    <style name="MenuButtonsSmall.Yellow">
        <item name="fab_colorNormal">@color/md_amber_500</item>
        <item name="fab_colorPressed">@color/md_amber_700</item>
        <item name="fab_colorRipple">@color/md_amber_900</item>
    </style>

    <style name="MenuButtonsSmall.Blue">
        <item name="fab_colorNormal">@color/md_cyan_500</item>
        <item name="fab_colorPressed">@color/md_cyan_700</item>
        <item name="fab_colorRipple">@color/md_cyan_900</item>
    </style>

    <style name="MenuButtonsSmall.Green">
        <item name="fab_colorNormal">@color/md_light_green_500</item>
        <item name="fab_colorPressed">@color/md_light_green_700</item>
        <item name="fab_colorRipple">@color/md_light_green_900</item>
    </style>

</resources>
